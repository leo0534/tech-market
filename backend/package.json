{
  "name": "tech-market-backend",
  "version": "1.0.0",
  "description": "Backend para Tech Market - Marketplace colombiano",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --setupFiles dotenv/config --testEnvironment node --runInBand --detectOpenHandles --forceExit",
    "test:watch": "jest --watch --setupFiles dotenv/config --testEnvironment node --runInBand --forceExit",
    "test:coverage": "jest --coverage --setupFiles dotenv/config --testEnvironment node --runInBand --forceExit",
    "test:auth": "jest tests/auth.test.js --setupFiles dotenv/config --testEnvironment node --runInBand --forceExit",
    "test:verification": "jest tests/verification.test.js --setupFiles dotenv/config --testEnvironment node --runInBand --forceExit",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js"
  },
  "keywords": [
    "marketplace",
    "colombia",
    "ecommerce"
  ],
  "author": "Tu Nombre",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "eslint": "^8.48.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.4"
  }
}
