{
  "name": "tech-market-backend",
  "version": "1.0.0",
  "description": "Backend para Tech Market - Marketplace colombiano",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --config jest.config.js --runInBand --detectOpenHandles",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:auth": "jest tests/auth.test.js --config jest.config.js --runInBand",
    "test:verification": "jest tests/verification.test.js --config jest.config.js --runInBand",
    "test:debug": "jest --config jest.config.js --runInBand --detectOpenHandles --verbose",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "clean": "rm -rf coverage .jest-cache"
  },
  "keywords": [
    "marketplace",
    "colombia",
    "ecommerce",
    "verification",
    "ocr"
  ],
  "author": "Tu Nombre",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "canvas": "^3.2.0",
    "child-process-promise": "^2.2.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "sharp": "^0.34.3",
    "string-similarity": "^4.0.4",
    "tesseract.js": "^6.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "eslint": "^8.48.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.2.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  }
}
